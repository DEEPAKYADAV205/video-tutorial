<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/icon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FacebookGoogleLoginActivity" >
          />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/linearlayout_bg1"
        android:orientation="vertical"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/glogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_launcherlogo" />
    </LinearLayout>

    <Button
        android:id="@+id/btnFb"
        style="@style/ButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnGplus"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@+id/btnGplus"
        android:background="@drawable/linearlayout_bg"
        android:drawableLeft="@drawable/icon_fb"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:text="Sign in with Facebook"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnGplus"
        style="@style/ButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/linearlayout_bg"
        android:drawableLeft="@drawable/icon_gplus"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:text="Sign in with Google+"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/signup_button1"
        style="@style/DefaultButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGplus"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/linearlayout_bg1"
        android:drawableLeft="@drawable/user"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:text="Register"
        android:textColor="#424242" />



    <Button
        android:id="@+id/login_button1"
        style="@style/DefaultButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnGplus"
        android:layout_below="@+id/signup_button1"
        android:background="@drawable/linearlayout_bg1"
        android:drawableLeft="@drawable/user"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:text="Login"
        android:layout_marginTop="5dp"
        android:textColor="#424242" />

    <TextView
        android:id="@+id/textView1"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/signup_button1"
        android:layout_below="@+id/login_button1"
        android:layout_marginTop="14dp"
        android:text="Forgot Password?"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>