<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textwelcome"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:textSize="20dp" />

    <RadioGroup
        android:id="@+id/radioSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Supervisor" />

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agent" />
    </RadioGroup>

    <Button
        android:id="@+id/btnDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onSelect"
        android:text="Select" />

    <TextView
        android:id="@+id/lname"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textwelcome"
        android:textColor="#000000"
        android:textSize="20dp" />
    <!--
         <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="User Panel"
            android:id="@+id/textView" android:layout_below="@+id/logout" android:layout_alignParentRight="true"
            android:textSize="18dp" android:textColor="#000000" android:textAlignment="center"/>
    -->

    <Button
        android:id="@+id/btchangepass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="74dp"
        android:layout_weight="0.00"
        android:text="Change Password"
        android:textColor="#000000"
        android:textSize="13dp" />

    <Button
        android:id="@+id/logout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="60dp"
        android:text="Logout"
        android:textColor="#000000"
        android:textSize="13dp" />

</LinearLayout>